<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_sale_order_tag_form">
        <field name="name">view.sale.order.line.tag.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[2]" position="after">
                <page string="Terms and Conditions">
                    <group>
                        <field name="terms_conditions_ids" widget="checkbox" placeholder="Terms and Conditions"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
